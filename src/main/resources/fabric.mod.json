  "description": "A simple fabric mod that show a durability bar in tooltip for items that have durability.",
  "authors": [
    "SiskSjet"
  ],
  "contact": {
    "homepage": "https://github.com/SiskSjet/durability-tooltip",
    "sources": "https://github.com/SiskSjet/durability-tooltip",
    "issues": "https://github.com/SiskSjet/durability-tooltip/issues"
  },

  "license": "MIT",
  "icon": "assets/durabilitytooltip/icon.png",

